<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".app.boarding.RegisterFragment">


    <TextView
        android:id="@+id/txtNewPasswordLbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/password"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtNewPassword"
        app:layout_constraintEnd_toEndOf="@+id/txtNewPassword"
        app:layout_constraintStart_toStartOf="@+id/txtNewPassword" />

    <TextView
        android:id="@+id/txtNewEmaillbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/password"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtNewEmail"
        app:layout_constraintEnd_toEndOf="@+id/txtNewEmail"
        app:layout_constraintStart_toStartOf="@+id/txtNewEmail" />

    <TextView
        android:id="@+id/txtNewLastNameLabl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/last_name"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtNewLastName"
        app:layout_constraintEnd_toEndOf="@+id/txtNewLastName"
        app:layout_constraintStart_toStartOf="@+id/txtNewLastName" />

    <TextView
        android:id="@+id/txtNewLastNameLabl2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/first_name"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtNewName"
        app:layout_constraintEnd_toEndOf="@+id/txtNewName"
        app:layout_constraintStart_toStartOf="@+id/txtNewName" />

    <EditText
        android:id="@+id/txtNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/transparent_gray"
        android:ems="10"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtPasswordConfirmationLbl"
        app:layout_constraintEnd_toEndOf="@+id/txtPasswordConfirmationLbl"
        app:layout_constraintStart_toStartOf="@+id/txtPasswordConfirmationLbl"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".65" />

    <EditText
        android:id="@+id/txtNewEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/transparent_gray"
        android:ems="10"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNewPasswordLbl"
        app:layout_constraintEnd_toEndOf="@+id/txtNewPasswordLbl"
        app:layout_constraintStart_toStartOf="@+id/txtNewPasswordLbl"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".65" />

    <EditText
        android:id="@+id/txtNewLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/transparent_gray"
        android:ems="10"
        android:hint="@string/last_name_hint"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNewEmaillbl"
        app:layout_constraintEnd_toEndOf="@+id/txtNewEmaillbl"
        app:layout_constraintStart_toStartOf="@+id/txtNewEmaillbl"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".65" />

    <EditText
        android:id="@+id/txtNewName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/transparent_gray"
        android:ems="10"
        android:hint="@string/first_name_hint"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNewLastNameLabl"
        app:layout_constraintEnd_toEndOf="@+id/txtNewLastNameLabl"
        app:layout_constraintStart_toStartOf="@+id/txtNewLastNameLabl"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".65" />

    <TextView
        android:id="@+id/txtPasswordConfirmationLbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/password_confirmation"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtPasswordConfirmation"
        app:layout_constraintEnd_toEndOf="@+id/txtPasswordConfirmation"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtPasswordConfirmation" />

    <EditText
        android:id="@+id/txtPasswordConfirmation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@color/transparent_gray"
        android:ems="10"
        android:hint="@string/password_confirmation_hint"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".65" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/outlined_button"
        android:text="@string/register_btn"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnBackRegister"
        app:layout_constraintEnd_toEndOf="@+id/btnBackRegister"
        app:layout_constraintStart_toStartOf="@+id/btnBackRegister"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".6" />

    <Button
        android:id="@+id/btnBackRegister"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/outlined_button"
        android:text="@string/go_back"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".6" />

</androidx.constraintlayout.widget.ConstraintLayout>